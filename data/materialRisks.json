      { "risk": "Moisture damage in humid areas", "mitigation": "Specify moisture-resistant board (green)" },
      { "risk": "Impact damage in high-traffic zones", "mitigation": "Consider impact-resistant options" }
    ],
    "acoustic-ceiling": [
      { "risk": "Sagging from humidity", "mitigation": "Specify humidity-resistant core for wet areas" },
      { "risk": "Poor acoustic performance if gaps", "mitigation": "Ensure tight joints and edge details" }
