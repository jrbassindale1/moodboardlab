  "risks": {
    "cross-laminated-timber": [
      { "risk": "Moisture ingress during construction", "mitigation": "Ensure weather protection and proper sealing" },
      { "risk": "Fire performance concerns", "mitigation": "Specify char rate calculations and intumescent coatings" }
    ],
    "glulam-beam": [
      { "risk": "Moisture damage if exposed", "mitigation": "Apply protective finish and ensure ventilation" },
      { "risk": "Connection detail complexity", "mitigation": "Coordinate early with structural engineer" }
    ],
    "steel-frame": [
      { "risk": "Corrosion in humid environments", "mitigation": "Specify galvanizing or protective coatings" },
      { "risk": "Thermal bridging at connections", "mitigation": "Include thermal breaks in details" }
    ],
    "concrete-insitu": [
      { "risk": "Quality control on site", "mitigation": "Specify test cubes and inspection regime" },
      { "risk": "Long curing time affecting programme", "mitigation": "Consider accelerators or off-site options" }
    ],
    "precast-concrete": [
      { "risk": "Joint waterproofing failures", "mitigation": "Specify robust sealant and drainage details" },
      { "risk": "Tolerance and fit issues", "mitigation": "Coordinate surveys and mock-ups early" }
    ],
    "brick-masonry": [
