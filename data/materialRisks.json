    ],
    "timber-cladding": [
      { "risk": "Uneven weathering and greying", "mitigation": "Accept natural variation or specify protective oils" },
      { "risk": "Movement and checking", "mitigation": "Select stable species and allow for movement" }
    ],
    "curtain-wall": [
      { "risk": "Air and water infiltration", "mitigation": "Specify CWCT testing and site hose testing" },
      { "risk": "Thermal bridging at transoms", "mitigation": "Require thermal break details in specs" }
    ],
    "triple-glazing": [
      { "risk": "Weight requires stronger frames", "mitigation": "Coordinate frame sizing with glass supplier" },
      { "risk": "Seal failure causing misting", "mitigation": "Specify minimum 10-year IGU warranty" }
